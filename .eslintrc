{
  "settings": {
    "react": {
      "pragma": "React",
      "version": "detect"
    }
  },
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module"  
  },
  "plugins": [
    "react"
  ],
  "extends": [
    "standard",
    "eslint:recommended", 
    "plugin:react/recommended"
  ],
  "env": {
    "es6": true,
    "browser": true
  },
  "rules": {
    "semi": ["error", "always"],
    "brace-style": ["error", "stroustrup"]
  }
}